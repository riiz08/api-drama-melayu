generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Drama {
  id             String    @id @default(cuid())
  slug           String    @unique
  title          String
  description    String? // dari "paragraph"
  thumbnail      String
  tarikhTayangan String?
  waktuSiaran    String?
  rangkaian      String?
  pengarah       String?
  produksi       String?
  episodes       Episode[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Episode {
  id          String    @id @default(cuid())
  slug        String    @unique
  title       String
  episodeNum  String?
  videoSrc    String
  publishedAt DateTime?
  dramaId     String
  drama       Drama     @relation(fields: [dramaId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
